{% layout 'layout.liquid' %}
{% block content %}

    <div class="container-sm">
        <form action="/cookies" method="POST">
            <fieldset>
                <legend>DIY Cookie</legend>
                <label class="form-label">Name: </label>
                <input
                    class="form-control"
                    type="text"
                    name="name"
                    placeholder="enter the name of your cookie"
                >
                <label class="form-label">Calories per cookie: </label>
                <input
                    class="form-control"
                    type="number"
                    name="calories"
                    min="0"
                >
                <label class="form-label">Sweet? </label>
                <input
                    class="form-check-input"
                    type="checkbox"
                    name="isSweet"
                >
                <br>
                <label class="form-label">Best eaten cold? </label>
                <input
                    class="form-check-input"
                    type="checkbox"
                    name="isEatenCold"
                >
            </fieldset>
            <input
                class="btn btn-success"
                type="submit"
                value="Create New Cookie"
            >
        </form>
    </div>

{% endblock %}