{% layout 'layout.liquid' %}
{% block content %}

    <div class="container-sm">
        <form action="/cookies/{{cookie.id}}?_method=PUT" method="POST">
            <fieldset>
                <legend>Edit {{ cookie.name }}</legend>
                <label class="form-label">Name: </label>
                <input
                    class="form-control"
                    type="text"
                    name="name"
                    placeholder="enter the name of the cookie"
                    value="{{ cookie.name }}""
                >
                <label class="form-label">Color: </label>
                <input
                    class="form-control"
                    type="text"
                    name="color"
                    placeholder="what color is the cookie?"
                    value="{{ cookie.color }}"
                >
                <label class="form-label">Ready To Eat: </label>
                <input
                    class="form-check-input"
                    type="checkbox"
                    name="readyToEat"
                    {% if cookie.readyToEat %}
                        checked
                    {% endif %}
                >
            </fieldset>
            <input
                class="btn btn-success"
                type="submit"
                value="Edit {{ cookie.name }}"
            >
        </form>
    </div>

{% endblock %}